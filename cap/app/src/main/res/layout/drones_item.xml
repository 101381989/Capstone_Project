<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Product 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/product1ImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/product1_image"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/productName1TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cinebot 20"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buyButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productLink1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="small tiny whoop for indoor perfect for flight"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- Product 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/product2ImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/product2_image"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/productName2TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Geprc domain 3.6"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buyButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productLink2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfect small size free style fpv"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- Product 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/product3ImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/product3_image"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/productName3TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Cinebot 30"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buyButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productLink3TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best 6s cinewhoop fpv available in market"
                android:layout_gravity="center" />

        </LinearLayout>

        <!-- Product 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/product4ImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/product4_image"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/productName4TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MOZ 7"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buyButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy Now"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productLink4TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Best Long range fpv"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
